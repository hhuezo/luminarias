<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- Franja de color según el estado -->
        <View
            android:id="@+id/estadoReporteView"
            android:layout_width="8dp"
            android:layout_height="match_parent"
            android:background="#FFA500" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">

            <!-- Fecha del reporte -->
            <TextView
                android:id="@+id/fechaTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fecha: 01/01/2024"
                android:textSize="14sp"
                android:textColor="#000000"
                android:textStyle="bold" />

            <!-- Tipo del reporte -->
            <TextView
                android:id="@+id/tipoTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tipo: Sin tipo"
                android:textSize="14sp"
                android:textColor="#555555"
                android:layout_marginTop="4dp" />

            <!-- Nombre del contacto y Teléfono (Horizontal) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp">

                <TextView
                    android:id="@+id/nombreContactoTextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Nombre: Sin nombre"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#555555" />

                <TextView
                    android:id="@+id/telefonoContactoTextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Teléfono: Sin número"
                    android:textSize="14sp"
                    android:textColor="#555555"
                    android:gravity="end" />
            </LinearLayout>

            <!-- Descripción del reporte -->
            <TextView
                android:id="@+id/descripcionTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Descripción: Sin descripción"
                android:textSize="14sp"
                android:textColor="#555555"
                android:layout_marginTop="4dp"
                android:maxLines="2"
                android:textStyle="bold"
                android:ellipsize="end" />

            <!-- Descripción del reporte -->
            <TextView
                android:id="@+id/distritoTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Distrito"
                android:textSize="14sp"
                android:textColor="#555555"
                android:layout_marginTop="4dp"
                android:maxLines="2"
                android:ellipsize="end" />



            <!-- Descripción del reporte -->
            <TextView
                android:id="@+id/departamentoTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Deparatmento"
                android:textSize="14sp"
                android:textColor="#555555"
                android:layout_marginTop="4dp"
                android:maxLines="2"
                android:ellipsize="end" />

        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
